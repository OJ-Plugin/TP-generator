{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tp-generator",
  "version": "0.1.0",
  "identifier": "com.tp-generator.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "tp-generator",
        "width": 1300,
        "height": 830,
        "maximized": true
      }
    ],
    "security": {
      "csp": "default-src 'self' https://openrouter.ai https://*.openrouter.ai"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
